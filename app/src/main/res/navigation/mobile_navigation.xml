<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment

        android:id="@+id/navigation_home"
        android:name="com.example.faff.ui.home.HomeFragment"
        android:text="home"
        android:icon="@drawable/home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_listen"
        android:name="com.example.faff.ui.listen.ListenFragment"
        android:text="listen"
        android:icon="@drawable/ic_listen"
        tools:layout="@layout/fragment_listen" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.faff.ui.profile.ProfileFragment"
        android:text="profile"
        android:icon="@drawable/profile"
        tools:layout="@layout/fragment_profile" />
